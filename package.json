{
  "name": "rsschool-ui",
  "version": "0.0.1",
  "description": "UI for rsschool",
  "license": "MIT",
  "repository": "github:rolling-scopes/rsschool-ui",
  "browserslist": [
    "chrome 45",
    "chrome 49",
    "chrome >= 61",
    "firefox >= 56",
    "ie >= 11",
    "safari >= 9",
    "edge >= 14"
  ],
  "scripts": {
    "start": "node server.js",
    "build": "next build src",
    "prod": "next start -p 8080",
    "webpack": "webpack --display-chunks --progress",
    "test": "jest --passWithNoTests",
    "test:update": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "lint": "tslint -c tslint.json --project tsconfig.json",
    "format": "prettier --config .prettierrc.json --write \"./src/**/*.ts\" \"./src/**/*.tsx\"",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook -c .storybook -o ./dist/storybook",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "npm run format",
      "git add"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.0-14",
    "@fortawesome/free-brands-svg-icons": "5.1.0-11",
    "@fortawesome/free-solid-svg-icons": "5.1.0-11",
    "@fortawesome/react-fontawesome": "0.1.4",
    "@zeit/next-css": "~1.0.1",
    "@zeit/next-sass": "~1.0.1",
    "@zeit/next-typescript": "~1.1.1",
    "axios": "^0.19.0",
    "bootstrap": "~4.3.1",
    "core-js": "~3.1.3",
    "date-fns": "~1.30.1",
    "express": "~4.17.1",
    "final-form": "~4.13.0",
    "http-proxy-middleware": "~0.19.1",
    "is-url": "1.2.4",
    "isomorphic-fetch": "~2.2.1",
    "next": "~8.1.0",
    "react": "~16.8.6",
    "react-datepicker": "~2.5.0",
    "react-dom": "~16.8.6",
    "react-final-form": "~4.1.0",
    "react-select": "~3.0.3",
    "react-table": "~6.10.0",
    "reactstrap": "~8.0.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.4.0",
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "@types/enzyme": "3.1.11",
    "@types/enzyme-to-json": "1.5.1",
    "@types/is-url": "1.2.28",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/jest": "23.1.4",
    "@types/next": "~8.0.4",
    "@types/node": "~8.0.47",
    "@types/react": "~16.8.13",
    "@types/react-datepicker": "~2.3.0",
    "@types/react-dom": "~16.8.4",
    "@types/react-select": "~2.0.19",
    "@types/react-table": "~6.8.1",
    "@types/reactstrap": "~8.0.1",
    "cross-env": "~5.2.0",
    "enzyme": "~3.9.0",
    "enzyme-adapter-react-16": "~1.12.1",
    "enzyme-to-json": "~3.3.5",
    "husky": "~2.1.0",
    "identity-obj-proxy": "~3.0.0",
    "jest": "~24.7.1",
    "lint-staged": "~8.1.5",
    "node-sass": "~4.12.0",
    "npm-run-all": "~4.1.5",
    "prettier": "~1.17.0",
    "ts-jest": "~24.0.2",
    "tslint": "~5.16.0",
    "tslint-react": "~4.0.0",
    "typescript": "~3.5.1"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "globals": {
      "DEBUG": false,
      "userAgent": "nodejs",
      "__JEST__": true
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "./src/app"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleNameMapper": {
      "^.+\\.(css|scss)$": "identity-obj-proxy"
    },
    "testMatch": [
      "**/*.spec.(ts|tsx)"
    ],
    "setupFiles": [
      "./configs/jestsetup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit-disabled": "npm-run-all lint-staged lint test"
    }
  }
}
