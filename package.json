{
    "name": "rsschool-ui",
    "version": "0.0.1",
    "description": "UI for rsschool",
    "license": "MIT",
    "repository": "github:rolling-scopes/rsschool-ui",
    "browserslist": [
        "chrome 45",
        "chrome 49",
        "chrome >= 61",
        "firefox >= 56",
        "ie >= 11",
        "safari >= 9",
        "edge >= 14"
    ],
    "scripts": {
        "dev": "webpack-dev-server --hot",
        "webpack": "webpack --display-chunks --progress",
        "start": "cross-env NODE_ENV=development npm-run-all dev",
        "build": "cross-env NODE_ENV=production npm-run-all webpack",
        "test": "jest",
        "test:update": "jest --updateSnapshot",
        "test:watch": "jest --watch",
        "lint": "tslint -c tslint.json --project tsconfig.json",
        "pretty": "prettier --config .prettierrc.json --write \"./src/**/*.ts\" \"./src/**/*.tsx\"",
        "storybook": "start-storybook -p 6006",
        "storybook:build": "build-storybook -c .storybook -o ./dist/storybook",
        "lint-staged": "lint-staged",
        "precommit": "npm-run-all lint-staged lint test",
        "commitmsg": "commitlint -E GIT_PARAMS"
    },
    "lint-staged": {
        "*.(ts|tsx)": [
            "npm run pretty",
            "git add"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "7.0.0",
        "@commitlint/config-conventional": "7.0.1",
        "@storybook/addon-actions": "4.0.0-alpha.12",
        "@storybook/addon-info": "4.0.0-alpha.12",
        "@storybook/addon-options": "4.0.0-alpha.12",
        "@storybook/addons": "4.0.0-alpha.8",
        "@storybook/react": "4.0.0-alpha.12",
        "@types/classnames": "2.2.4",
        "@types/enzyme": "3.1.11",
        "@types/enzyme-to-json": "1.5.1",
        "@types/is-url": "1.2.28",
        "@types/jest": "23.1.4",
        "@types/luxon": "1.2.1",
        "@types/node": "8.0.47",
        "@types/react": "16.4.6",
        "@types/react-dom": "16.0.6",
        "@types/react-hot-loader": "4.1.0",
        "@types/react-redux": "6.0.3",
        "@types/react-router-dom": "4.2.7",
        "@types/react-router-redux": "5.0.15",
        "@types/react-table": "^6.7.11",
        "@types/reactstrap": "6.0.0",
        "@types/redux-form": "7.3.1",
        "@types/storybook__react": "3.0.7",
        "awesome-typescript-loader": "5.2.0",
        "clean-webpack-plugin": "0.1.19",
        "copy-webpack-plugin": "4.5.2",
        "cross-env": "5.2.0",
        "css-loader": "0.28.11",
        "enzyme": "3.3.0",
        "enzyme-adapter-react-16": "1.1.1",
        "enzyme-to-json": "3.3.4",
        "extract-text-webpack-plugin": "4.0.0-beta.0",
        "html-webpack-plugin": "3.2.0",
        "husky": "0.14.3",
        "identity-obj-proxy": "3.0.0",
        "jest": "23.3.0",
        "lint-staged": "7.2.0",
        "node-sass": "4.9.0",
        "npm-run-all": "4.1.3",
        "prettier": "1.13.7",
        "react-docgen-typescript-webpack-plugin": "1.1.0",
        "sass-loader": "7.0.3",
        "style-loader": "0.21.0",
        "ts-jest": "23.0.0",
        "tslint": "5.10.0",
        "tslint-react": "3.6.0",
        "typescript": "2.9.2",
        "webpack": "4.14.0",
        "webpack-cli": "3.0.8",
        "webpack-dev-server": "3.1.4",
        "webpack-merge": "4.1.3"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "1.2.0-14",
        "@fortawesome/free-brands-svg-icons": "5.1.0-11",
        "@fortawesome/free-solid-svg-icons": "5.1.0-11",
        "@fortawesome/react-fontawesome": "0.1.0-11",
        "axios": "0.18.0",
        "bootstrap": "4.1.1",
        "classnames": "2.2.6",
        "core-js": "2.5.7",
        "history": "4.7.2",
        "is-url": "1.2.4",
        "luxon": "1.3.1",
        "moment": "2.22.2",
        "react": "16.4.1",
        "react-dom": "16.4.1",
        "react-hot-loader": "3.1.1",
        "react-redux": "5.0.7",
        "react-router-dom": "4.3.1",
        "react-router-redux": "5.0.0-alpha.9",
        "react-table": "6.8.6",
        "reactstrap": "6.2.0",
        "redux": "4.0.0",
        "redux-form": "7.4.2",
        "redux-thunk": "2.3.0"
    },
    "jest": {
        "globals": {
            "DEBUG": false,
            "userAgent": "nodejs",
            "__JEST__": true
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "moduleDirectories": [
            "node_modules",
            "./src/app"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "moduleNameMapper": {
            "^.+\\.(css|scss)$": "identity-obj-proxy"
        },
        "testMatch": [
            "**/*.spec.(ts|tsx)"
        ],
        "setupFiles": [
            "./configs/jestsetup.js"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ]
    }
}
